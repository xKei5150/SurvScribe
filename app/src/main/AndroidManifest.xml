<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" android:maxSdkVersion="32" tools:replace="android:maxSdkVersion" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" android:maxSdkVersion="32" tools:replace="android:maxSdkVersion" />
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/survscribe"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/survscribe_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SurvScribe"
        tools:targetApi="31">

        <activity
            android:name="com.insitu.survscribe.fd_test_layout"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.insitu.survscribe.dcp_test_layout"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.insitu.survscribe.sp_test_layout"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.insitu.survscribe.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>
