<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Existing TextView and Divider -->
    <TextView
        android:id="@+id/textView2"
        style="@style/sil_text_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="SITE INFORMATION FORM"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        style="@style/sil_text_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="TEST DATA TABLE"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/materialClassificationInput" />

    <!-- Left Side: Labels and Input Fields -->
    <View
        android:id="@+id/divider2"
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:layout_marginEnd="16dp"
        android:background="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/companyNameLabel"
        style="@style/sil_left_text"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="COMPANY NAME"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/dateConductedLabel"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider" />

    <!-- Add more labels and input fields on the left side as needed -->

    <!-- Right Side: Labels and Input Fields -->
    <TextView
        android:id="@+id/dateConductedLabel"
        style="@style/sil_right_text"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="DATE CONDUCTED"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/companyNameLabel"
        app:layout_constraintTop_toBottomOf="@+id/divider" />

    <TextView
        android:id="@+id/projectNameLabel"
        style="@style/sil_left_text"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="PROJECT NAME"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/timeLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/companyNameInput" />

    <TextView
        android:id="@+id/timeLabel"
        style="@style/sil_right_text"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="TIME"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/projectNameLabel"
        app:layout_constraintTop_toBottomOf="@+id/dateConductedInput" />


    <TextView
        android:id="@+id/ownerLabel"
        style="@style/sil_left_text"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="OWNER/LESSOR"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/teamLeaderLabel"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/projectNameInput" />

    <TextView
        android:id="@+id/teamLeaderLabel"
        style="@style/sil_right_text"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="TEAM LEADER"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ownerLabel"
        app:layout_constraintTop_toBottomOf="@+id/timeInput" />

    <TextView
        android:id="@+id/locationLabel"
        style="@style/sil_left_text"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="LOCATION"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/teamMemberLabel"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ownerInput" />

    <EditText
        android:id="@+id/companyNameInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="#D9D9D9"
        android:inputType="text"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/companyNameLabel"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/companyNameLabel"
        app:layout_constraintTop_toBottomOf="@+id/companyNameLabel" />

    <EditText
        android:id="@+id/dateConductedInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="#D9D9D9"
        android:focusable="false"
        android:inputType="none"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/dateConductedLabel"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/dateConductedLabel"
        app:layout_constraintTop_toBottomOf="@+id/dateConductedLabel" />

    <EditText
        android:id="@+id/projectNameInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#D9D9D9"
        android:ems="10"
        android:inputType="text"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/projectNameLabel"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/projectNameLabel"
        app:layout_constraintTop_toBottomOf="@+id/projectNameLabel" />

    <EditText
        android:id="@+id/timeInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#D9D9D9"
        android:focusable="false"
        android:inputType="none"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/timeLabel"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/timeLabel"
        app:layout_constraintTop_toBottomOf="@+id/timeLabel" />

    <EditText
        android:id="@+id/ownerInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#D9D9D9"
        android:ems="10"
        android:inputType="text"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/ownerLabel"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/ownerLabel"
        app:layout_constraintTop_toBottomOf="@+id/ownerLabel" />

    <EditText
        android:id="@+id/teamLeaderInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#D9D9D9"
        android:ems="10"
        android:inputType="text"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/teamLeaderLabel"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/teamLeaderLabel"
        app:layout_constraintTop_toBottomOf="@+id/teamLeaderLabel" />

    <TextView
        android:id="@+id/teamMemberLabel"
        style="@style/sil_right_text"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="TEAM MEMBER/S"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/locationLabel"
        app:layout_constraintTop_toBottomOf="@+id/teamLeaderInput" />

    <EditText
        android:id="@+id/locationInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#D9D9D9"
        android:ems="10"
        android:inputType="text"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/locationLabel"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/locationLabel"
        app:layout_constraintTop_toBottomOf="@+id/locationLabel" />

    <EditText
        android:id="@+id/teamMemberInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#D9D9D9"
        android:ems="10"
        android:focusable="false"
        android:hint=" Click to View/Edit Members"
        android:inputType="none"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/teamMemberLabel"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/teamMemberLabel"
        app:layout_constraintTop_toBottomOf="@+id/teamMemberLabel" />

    <TextView
        android:id="@+id/weatherLabel"
        style="@style/sil_left_text"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="WEATHER"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/materialClassificationLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/locationInput" />

    <EditText
        android:id="@+id/weatherInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#D9D9D9"
        android:ems="10"
        android:inputType="text"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/weatherLabel"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/weatherLabel"
        app:layout_constraintTop_toBottomOf="@+id/weatherLabel" />

    <TextView
        android:id="@+id/materialClassificationLabel"
        style="@style/sil_right_text"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="MATERIAL CLASSIFICATION"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/weatherLabel"
        app:layout_constraintTop_toBottomOf="@+id/teamMemberInput" />

    <EditText
        android:id="@+id/materialClassificationInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#D9D9D9"
        android:ems="10"
        android:inputType="text"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/materialClassificationLabel"
        app:layout_constraintStart_toStartOf="@+id/materialClassificationLabel"
        app:layout_constraintTop_toBottomOf="@+id/materialClassificationLabel" />

    <!-- Add more labels and input fields on the right side as needed -->

</androidx.constraintlayout.widget.ConstraintLayout>
